<configuration supports_final="true">
    <property>
        <name>elasticsearch.host</name>
        <value>localhost</value>
        <description>Elasticsearch hostname or IP that ockb will connect to.</description>
    </property>
    <property>
        <name>elasticsearch.port</name>
        <value>9200</value>
        <description>Elasticsearch port that ockb will connect to.</description>
        <value-attributes>
            <type>int</type>
        </value-attributes>
    </property>
    <property>
        <name>ockb.host</name>
        <value>localhost</value>
        <description>Knowledge Base hostname or IP for alert direction.</description>
    </property>
    <property>
        <name>server.port</name>
        <value>3000</value>
        <description>Knowledge Base Server Port</description>
        <value-attributes>
            <type>int</type>
        </value-attributes>
    </property>
    <property>
        <name>logging.dest</name>
        <value>/var/log/ockb</value>
        <description>If you would like to send
            the log output to a file you can set the path below.
        </description>
    </property>
</configuration>